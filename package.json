{
  "name": "shogun",
  "productName": "shogun",
  "version": "1.0.0",
  "description": "Shogun game",
  "main": "./src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "server": "http-server --silent src/"
  },
  "keywords": [
    "electron",
    "phaser",
    "electron-compile"
  ],
  "author": "James Gowdy",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "flatpak",
          "deb"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "electron_phaser_forge"
      },
      "electronInstallerDebian": {},
      "electronInstallerFlatpak": {
        "dest": "out",
        "icon": "./src/game/assets/images/mushroom2.png",
        "categories": [
          "Games"
        ]
      },
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "electronphaserforge"
      }
    }
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "electron-compile": "^6.4.2",
    "electron-squirrel-startup": "^1.0.0",
    "phaser-ce": "^2.10.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.47",
    "electron": "^1.7.9",
    "electron-forge": "^4.1.2",
    "electron-installer-flatpak": "^0.6.0",
    "electron-prebuilt-compile": "1.7.9",
    "http-server": "^0.11.1",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  }
}
